<main class="form-container margin-t">
  <div class="shadow-xl rounded-xl px-8 py-2 sm:px-12 mt-4 bg-gradient">
    <h1 class="font-bold font-playpen new-text-gradient py-3 text-center padding-top">Sign Up</h1>

    <form class="signup-form"> 
      <!-- username input -->
      <div class="py-6 form-divs">
        <h2 class="font-playpen font-bold new-text-gradient py-2 form-text ">Username</h2>
        <input
          id="name-signup" 
          type="text" 
          placeholder="Enter Username"
          autocomplete="username"
          class="border-b-2 width-custom border-gray-200 py-3 px-7 border" style="width: 90%;"
        />
        <div id="user-error" class="error-message font-playpen"></div>
      </div>
      <!-- email input -->
      <div class="py-6 form-divs">
        <h2 class="font-playpen font-bold new-text-gradient py-2 form-text">Email</h2>
        <input
          id="email-signup"
          type="email" 
          placeholder="Enter email"
          autocomplete="email"
          class="border-b-2 border width-custom  border-gray-200 py-3 px-7" style="width: 90%;"
        />
        <div id="email-error" class="error-message font-playpen"></div>
      </div>
      <!-- password input -->
      <div class="py-6 form-divs">
        <h2 class="font-playpen font-bold new-text-gradient text-left py-2 form-text">Password</h2>
        <input
          id="password-signup"
          type="text"
          placeholder="Enter password"
          autocomplete="new-password"
          class="border-b-2 border width-custom  border-gray-200 py-3 px-7" style="width: 90%;"
        />
        <div id="password-error" class="error-message font-playpen"></div>
          <!--sign in button -->
          <div class="text-center py-6">
           <button type="submit" class="mt-4 
           btn-hover btn-hover:hover rounded-btn
            font-playpen text-[20px] text-white pr-2 pl-2 ">Submit</button>
          </div> 
       </form>   
    </div>
 </main>
 <script src="/js/signUp.js"></script>
